{
  "name": "dumlj-build",
  "version": "0.0.1",
  "private": true,
  "description": "something build utilities",
  "license": "MIT",
  "workspaces": {
    "packages": [
      "@lib/*",
      "@feature/*",
      "@webpack-plugin/*"
    ]
  },
  "scripts": {
    "clear": "rimraf ./@*/*/{libs,build,tsconfig.tsbuildinfo}",
    "compile": "lerna exec --stream --scope @dumlj/* -- concurrently -P \"yarn:compile:* {1}\" --",
    "dev": "jest -c ./jest.config.ts --watch",
    "dev:docs": "dumi dev",
    "format": "prettier --config .prettierrc.js --write \"**/*.{js,jsx,ts,tsx,d.ts,vue,md,json,yml,yaml}\"",
    "postinstall": "ts-patch install -s",
    "lint": "yarn lint:ts",
    "lint:ts": "eslint --config .eslintrc.js --ext .ts,.tsx --fix . --cache --cache-location \".eslintcache/\"",
    "test": "jest -c ./jest.config.ts --coverage --reporters=default --reporters=jest-junit"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.0",
    "@commitlint/config-conventional": "^17.4.0",
    "@stackblitz/sdk": "^1.9.0",
    "@swc/helpers": "^0.5.2",
    "@tsd/typescript": "^5.2.2",
    "@types/jest": "^28.1.1",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "commitizen": "^4.2.4",
    "commitlint-plugin-i18n": "^0.0.1-alpha.3",
    "concurrently": "^8.2.1",
    "cz-customizable": "^7.0.0",
    "cz-customizable-i18n-config": "^0.0.1-alpha.2",
    "dumi": "^2.2.7",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react-hooks": "^4.4.0",
    "fs-extra": "^11.1.0",
    "husky": "^8.0.3",
    "jest": "^28.1.0",
    "jest-cli": "^28.1.0",
    "jest-junit": "^15.0.0",
    "jest-puppeteer": "^6.0.3",
    "jest-runner-tsd": "^6.0.0",
    "lerna": "^7.1.5",
    "lint-staged": "^14.0.1",
    "prettier": "^2.8.3",
    "puppeteer": "^14.2.0",
    "rimraf": "^3.0.2",
    "shx": "^0.3.4",
    "ts-jest": "^28.0.3",
    "ts-node": "^10.9.1",
    "ts-patch": "^2.1.0",
    "tsd-lite": "^0.8.0",
    "tslib": "^2.5.0",
    "typescript": "^4.6.3",
    "typescript-transform-paths": "^3.4.6",
    "utility-types": "^3.10.0"
  }
}
