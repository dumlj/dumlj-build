{
  "name": "dumlj-build",
  "version": "0.0.1",
  "private": true,
  "description": "something build utilities",
  "license": "MIT",
  "packageManager": "pnpm@8.15.1",
  "workspaces": {
    "packages": [
      "@lib/*",
      "@feature/*",
      "@webpack-plugin/*",
      "@vite-plugin/*",
      "@dumi-plugin/*",
      "@next-plugin/*",
      "@cli/*",
      "@*/*/__example__"
    ]
  },
  "scripts": {
    "commit": "git-cz",
    "ci:pages": "shx rm -rf ./gh-pages && mkdir -p ./gh-pages && shx cp -rf ./coverage ./gh-pages/coverage || true && dumi build",
    "ci:coverage": "npm run compile && npm run test",
    "ci:build": "npm run compile",
    "postinstall": "node ./public/scripts/postinstall.mjs",
    "preinstall": "node ./public/scripts/preinstall.mjs",
    "clear": "rimraf --glob ./@*/*/{libs,build,*.tsbuildinfo,tsconfig.build.json} tsconfig.build.json",
    "format": "prettier --config .prettierrc.js --write \"**/*.{js,jsx,ts,tsx,d.ts,vue,md,json,yml,yaml}\"",
    "lint": "eslint --fix .",
    "tidy": "dumlj concurrently \"tscfg --exclude **/__example__\" \"deps --exclude **/__example__\"",
    "readme": "dumlj readme --exclude **/__example__",
    "compile": "tsc --build ./tsconfig.build.json",
    "test": "jest -c ./jest.config.ts --coverage",
    "docs:dev": "rm -rf .dumi/tmp && rm -rf node_modules/.cache && dumi dev",
    "dev": "jest -c ./jest.config.ts --watch",
    "ok": "npm run tidy && npm run compile && npm run lint && npm run test && npm run readme && npm run format"
  },
  "peerDependencies": {
    "@dumlj/mock-lib": "workspace:^2.5.22",
    "@dumlj/seed-cli": "workspace:^2.5.22",
    "@dumlj/seed-webpack-plugin": "workspace:^2.5.22",
    "@dumlj/shell-lib": "workspace:^2.5.22",
    "@dumlj/util-lib": "workspace:^2.5.22",
    "@dumlj/tidy-cli": "workspace:^2.5.22",
    "@dumlj/dumi-plugin-node-stackblitz": "workspace:^2.5.22",
    "@dumlj/dumi-plugin-mono-readme": "workspace:^2.5.22",
    "@dumlj/create-cli": "workspace:^2.5.22"
  },
  "devDependencies": {
    "@types/node": "^20.10.1",
    "lodash": "^4.17.21",
    "micromatch": "^4.0.5"
  },
  "dependencies": {
    "@commitlint/cli": "^17.4.0",
    "@commitlint/config-conventional": "^17.4.0",
    "@jest/types": "^29.6.3",
    "@swc/helpers": "^0.5.3",
    "@tsd/typescript": "^5.2.2",
    "@types/jest": "^29.5.7",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "commitizen": "^4.2.4",
    "commitlint-plugin-i18n": "^0.0.1-alpha.3",
    "concurrently": "^8.2.2",
    "cz-customizable": "^7.0.0",
    "cz-customizable-i18n-config": "^0.0.1-alpha.2",
    "dumi": "^2.2.16",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "^5.0.1",
    "fs-extra": "^11.1.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-cli": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jest-puppeteer": "^9.0.1",
    "jest-runner-tsd": "^6.0.0",
    "lerna": "^7.4.2",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "puppeteer": "^21.4.1",
    "rimraf": "^5.0.5",
    "shx": "^0.3.4",
    "spinnies": "^0.5.1",
    "ts-jest": "^29.1.1",
    "ts-node": "10.9.1",
    "ts-patch": "^3.0.2",
    "tsd-lite": "^0.8.0",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2",
    "typescript-transform-paths": "^3.4.6",
    "utility-types": "^3.10.0"
  }
}
