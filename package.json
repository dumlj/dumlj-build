{
  "name": "dumlj-build",
  "version": "0.0.1",
  "private": true,
  "description": "something build utilities",
  "license": "MIT",
  "packageManager": "pnpm@8.10.2",
  "workspaces": {
    "packages": [
      "@lib/*",
      "@feature/*",
      "@webpack-plugin/*",
      "@vite-plugin/*",
      "@dumi-plugin/*",
      "@cli/*",
      "@*/*/__example__"
    ]
  },
  "scripts": {
    "commit": "git-cz",
    "ci:pages": "shx rm -rf ./gh-pages && mkdir -p ./gh-pages && shx cp -rf ./coverage ./gh-pages/coverage && dumi build",
    "ci:coverage": "pnpm compile && pnpm test",
    "ci:build": "pnpm compile",
    "preinstall": "node ./scripts/preinstall",
    "postinstall": "node ./scripts/postinstall",
    "clear": "rimraf --glob ./@*/*/{libs,build,*.tsbuildinfo,tsconfig.build.json} tsconfig.build.json",
    "format": "prettier --config .prettierrc.js --write \"**/*.{js,jsx,ts,tsx,d.ts,vue,md,json,yml,yaml}\"",
    "lint": "pnpm lint:ts",
    "lint:ts": "eslint --config .eslintrc.js --ext .ts,.tsx --fix .",
    "tidy": "dumlj concurrently \"tscfg --exclude **/__example__\" \"deps --ignore .templaterc.ts\"",
    "readme": "dumlj readme --exclude **/__example__",
    "compile": "tsc --build ./tsconfig.build.json",
    "test": "jest -c ./jest.config.ts --coverage --reporters=default --reporters=jest-junit",
    "docs:dev": "rm -rf .dumi/tmp && rm -rf node_modules/.cache && dumi dev",
    "dev": "jest -c ./jest.config.ts --watch",
    "ok": "pnpm tidy && pnpm compile && pnpm lint && pnpm test && pnpm readme && pnpm format"
  },
  "devDependencies": {
    "@dumlj/mock-lib": "workspace:*",
    "@dumlj/seed-cli": "workspace:*",
    "@dumlj/seed-webpack-plugin": "workspace:*",
    "@dumlj/shell-lib": "workspace:*",
    "@dumlj/util-lib": "workspace:*",
    "@dumlj/tidy-cli": "workspace:*",
    "@types/node": "^20.10.1",
    "lodash": "^4.17.21",
    "micromatch": "^4.0.5"
  },
  "dependencies": {
    "@commitlint/cli": "^17.4.0",
    "@commitlint/config-conventional": "^17.4.0",
    "@jest/types": "^29.6.3",
    "@swc/helpers": "^0.5.3",
    "@tsd/typescript": "^5.2.2",
    "@types/jest": "^29.5.7",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "commitizen": "^4.2.4",
    "commitlint-plugin-i18n": "^0.0.1-alpha.3",
    "concurrently": "^8.2.2",
    "cz-customizable": "^7.0.0",
    "cz-customizable-i18n-config": "^0.0.1-alpha.2",
    "dumi": "^2.2.14",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react-hooks": "^4.4.0",
    "fs-extra": "^11.1.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-cli": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jest-puppeteer": "^9.0.1",
    "jest-runner-tsd": "^6.0.0",
    "lerna": "^7.4.2",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "puppeteer": "^21.4.1",
    "rimraf": "^5.0.5",
    "shx": "^0.3.4",
    "spinnies": "^0.5.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-patch": "^3.0.2",
    "tsd-lite": "^0.8.0",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2",
    "typescript-transform-paths": "^3.4.6",
    "utility-types": "^3.10.0"
  }
}
